# ========== Database Configuration ==========
MYSQL_ROOT_PASSWORD=admin
MYSQL_DATABASE=capacita

SPRING_DATASOURCE_URL=jdbc:mysql://mysql-capacita:3306/capacita?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=admin

# ========== RabbitMQ Configuration ==========
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=guest
SPRING_RABBITMQ_PASSWORD=guest
SPRING_RABBITMQ_VIRTUAL_HOST=/

RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ========== Email Configuration ==========
# ⚠️ IMPORTANTE: Escolha UMA das opções abaixo!
# Sem SMTP configurado, notificações não serão enviadas!

# Opção 1: MailHog (RECOMENDADO para desenvolvimento local)
# Dashboard: http://localhost:8025
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=dev@example.com
MAIL_PASSWORD=dev-password

# Opção 2: Gmail (com Senha de App - para produção)
# 1. Acesse: https://myaccount.google.com/apppasswords
# 2. Gere uma senha (16 caracteres com espaços)
# 3. Cole abaixo
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=seu-email@gmail.com
# MAIL_PASSWORD=xxxx xxxx xxxx xxxx

# Opção 3: SendGrid (serviço gerenciado)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=SG.xxxxxxxxxxxx

# ========== Application Configuration ==========
SPRING_JPA_HIBERNATE_DDL_AUTO=none
SPRING_JPA_SHOW_SQL=false
SERVER_PORT=8080

# ========== Logging ==========
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=WARN
LOGGING_LEVEL_SERVICOS_GRATITUDE=INFO
